{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils/index"],
      "@constants": ["./src/constants/index"],
      "@modules": ["./src/modules/index"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["./**/*"]
}
